{% extends 'base.html.twig' %}

{% block title %}Hello ClientController!
{% endblock %}

{% block body %}
	<!-- Header -->
	<header class="bg-[#1E375A] text-white p-4">
		<h1 class="text-2xl font-bold">Gestion des Clients</h1>
	</header>

	<div
		class="flex flex-1">
		<!-- Sidebar -->
		<nav class="w-64 bg-[#1E375A] text-white p-4">
